{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="corps">
        <div class="firstPart">
            <h1>Utilisateur</h1>
        </div>
        <div class="block">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.nom }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.prenom }}</td>
                </tr>
                <tr>
                    <th>Mail</th>
                    <td>{{ user.mail }}</td>
                </tr>
                <tr>
                    <th>Âge</th>
                    <td>{{ user.age }}</td>
                </tr>
                <tr>
                    <th>MotDePasse</th>
                    <td>{{ user.motDePasse }}</td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td>{{ user.role }}</td>
                </tr>
                </tbody>
            </table>

            <a class="btn btn-light" href="{{ path('app_crud_user_edit', {'id': user.id}) }}">Modifier le profil</a>
            <br>
            <br>
            <a class="btn btn-light" href="{{ path('profil')}}">Retour à la page de profil</a>
            <br>
            <br>
            {% if is_granted('ROLE_ADMIN') %}
                {{ include('crud_user/_delete_form.html.twig') }}
            {% endif %}

            <br>
        </div>
        <br>
    </div>

    <style>
        .corps{
            width: auto;
            height: auto;
            border: 0px solid black;
            margin: 2%;
            background-color: #BAD4D8;
            border-radius: 50px;
        }
        .firstPart{
            width: auto;
            height: auto;
            border: 0px solid black;
            margin: 2%;
            text-align: center;
        }
        .block{
            width: auto;
            height: auto;
            border: 0px solid black;
            margin: 2%;
            text-align: center;
            border-radius: 50px;
            background-color: #EFE7CA;
        }

    </style>
{% endblock %}
