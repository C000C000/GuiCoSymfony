{% extends 'base.html.twig' %}

{% block title %}Hello FilmsController!{% endblock %}

{% block body %}
    <div class="corps">
        <div class="firstPart">
            <h1>Films</h1>
            <br>
            <select class="form-select unMargin" aria-label="Default select example">
                <option selected>Catégorie</option>
                <!--Pour x in XXX -->    <!--Appel de l'API pour les catégories-->
                {% for categori in categorie.genres %}
                    <option value="{{ categori.name }}">{{ categori.name }}</option>
                {% endfor %}
            </select>
            <br>
            <div class="row unMargin">
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Rechercher un film..." aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Rechercher</button>
                </form>
            </div>
        </div>
        {% for movie in movies.results %}
        {% set movieDetails = controller.getFilmById(movie.id) %}
        <div class="mesFilms">
            <div class="uneCase">
                <p>Titre :{{ movie.original_title}}  </p>
                <img src="">
                <p>Description : {{ movieDetails.overview}} </p>
                <p>Durée : {{ movieDetails.runtime}} minutes</p>
                <p>Réalisation : {% for producer in movieDetails.production_companies %}
                    <a> {{ producer.name }}</a>
                    {% endfor %}
                </p>
                <br>
                <br>
                <a href="#">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                        <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                    </svg>
                    Ajouter aux favoris
                </a>
            </div>
        </div>
        {% endfor %}
    </div>

    <style>
        .corps{
            width: auto;
            height: auto;
            border: 1px solid black;
            margin: 2%;

        }
        .firstPart{
            width: auto;
            height: 250px;
            border: 1px solid black;
            margin: 2%;
            padding: 1%;

        }
        .mesFilms{
            width: auto;
            height: auto;
            border: 1px solid black;
            margin: 2%;
            padding: 1%;
            display: flex;
        }
        .block{
            width: auto;
            height: auto;
            border: 1px solid black;
            margin: 2%;

        }
        .uneCase{
            width: 45%;
            height: 350px;
            border: 1px solid black;
            padding: 1%;
            margin: 2%;
        }
        .unMargin{
            margin: 1%;

        }
    </style>
{% endblock %}
