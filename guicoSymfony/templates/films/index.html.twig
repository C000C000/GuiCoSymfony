        {% for movie in movies.results %}
        {% set movieDetails = controller.getFilmById(movie.id) %}
        <div class="mesFilms">
            <div class="uneCase">
                <br>
                <p style="font-size: 150%;"><strong>Titre :</strong> {{ movie.original_title}}  </p>
                <img class="image" style="width: 50%; height: 40%; text-align: center;" src="https://image.tmdb.org/t/p/original{{ movie.poster_path }}">
                <br>
                <br>
                <p><strong>Description :</strong> {{ movie.overview|length > 150 ? movie.overview|slice(0, 150) ~ '...' : movie.overview }} </p>
                <p><strong>Durée :</strong> {{ movieDetails.runtime}} minutes</p>
                <p><strong>Réalisation :</strong>
                    {% for producer in movieDetails.production_companies %}
                    <a> {{ producer.name }}</a>
                    {% endfor %}
                </p>
                {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('WatchList', {'id': movie.id }) }}">
